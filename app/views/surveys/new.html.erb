<div class="container">
  <h2>Share opinion about yourself</h2>     
  
    <%= form_for @survey, url: surveys_path, html: {class: "form-group", id: "new_response"} do |u| %>
    
      <p>Give a description for your survey</p>
        <%= u.text_field :name %>
       
      <p>Select any adjectives that you believe describe you...</p>
      
      <%= u.fields_for :respose do |f|%>
      
        <div class="btn-group" data-toggle="buttons">
          <% i=0%>
          <% @adjectives.each do |adj| %>
            <% i=i+1%>
              <label class="btn btn-info">
                <%= check_box_tag "response[Adjectives][]", adj.id%>
                <%= adj.word.capitalize %>
              </label>
            <% if i==8 %>
            </div><br/><div class="btn-group" data-toggle="buttons">
              <%i=0%>
            <%end%>
          <%end%>
        </div>
      <%end%>
      <p>
        <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Review Answer</button>
      </p>
  
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">Your opinion about me</h4>
            </div>
            <div class="modal-body">
              <h1>Create a list of words that the user selected</h1>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Go back</button>
              <%= u.submit "Submit!", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>