<div class="container">
  <%= @survey.name %>
  
  <p> Words you have selected:</p>
  <% @survey.responses.find(:first, :conditions => "loa = 4").adjectives.each do |t| %>
    <%= t.word %>
  <%end%>
  <br/><br/>
  <p>Invite your friends to answer your survey, by sharing this link:<br/>
  <%= link_to "#{request.base_url}#{new_survey_response_path}", new_survey_response_path%>
  </p>
  
  <h2>Sum of adjectives from responses</h2>
  <% @responses.each do |t| %>
    <% t.adjectives.each do |k| %>
      <%= k.word %>
    <%end%>
  <%end%>
  
  <h2>Individual responses</h2>
    <ol>
      <% @survey.responses.find(:all, :conditions => "loa != 4").each do |r|%>
        <li><%= link_to "Response", "/responses/#{r.uuid}" %></li>
      <%end%>
    </ol>
  </p>
</div>
