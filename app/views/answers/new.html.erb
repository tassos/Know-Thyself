<div class="container">
  <h2>Share new opinion</h2>
      
  
  <% flash.each do |key, value| %>
    <div class="flash <%= key %> alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= value %>
    </div>
<% end %>
  <%= form_for :answer, url: answers_path, html: {class: "form-group", id: "new_answer"} do |f| %>
    <p>Select any adjectives that you believe describe me...</p>
    
    <div class="table-responsive">
      <% i=0%>
      <table class="table"><tr>
      	<% @answers.each do |word| %>
        	<% i=i+1%>
        	<td>
        		<%= check_box_tag "answer[Adjectives][]", word%>
        		<%= label_tag word%>
          </td>
          <% if i==5 %>
            </tr><tr>
            <%i=0%>
          <%end%>
      	<%end%>
    	</tr></table>
    </div>
  
    <p>
      <%= text_field_tag "answer[Adjectives][]", nil, placeholder: "...and even add your own! (separated by comma)", size: 55%>
    </p>
    <p>
      <%= f.label :"You know me" %>
      <%= f.select :LOA, options_for_select([[nil, nil], ['a little bit', 3], ['somehow', 2], ['very good', 1]]),{default: nil} %>
    </p>
    <p>
      <%= f.submit "Submit opinion", class: "btn btn-success"%>
    </p>
  <% end %>
</div>