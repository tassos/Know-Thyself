<div class="container">
  <h2>Share new opinion</h2>
      
    <%= form_for @response, url: responses_path, html: {class: "form-group", id: "new_response"} do |f| %>
      
        <p>Select any adjectives that you believe describe <%= @survey.user.name%>...</p>
      
        <div class="btn-group" data-toggle="buttons">
          <% i=0%>
          <% @adjectives.each do |adj| %>
            <% i=i+1%>
              <label class="btn btn-info">
                <%= check_box_tag "response[Adjectives][]", adj.id%>
                <%= adj.word.capitalize %>
              </label>
            <% if i==8 %>
            </div><br/><div class="btn-group" data-toggle="buttons">
              <%i=0%>
            <%end%>
          <%end%>
        </div>
      <p>
        <%= f.label "You know " + @survey.user.name.capitalize %>
        <%= f.select :loa, options_for_select([[nil, nil], ['a little bit', 3], ['somehow', 2], ['very good', 1]]),{default: nil} %>
      </p>
      <p>
        <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">Submitting a response</button>
      </p>
  
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
              <h1>Are you sure you want to submit the response?</h1>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Go back</button>
              <%= f.hidden_field :survey_id, value: @survey.id%>
              <%= f.submit "Submit!", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>